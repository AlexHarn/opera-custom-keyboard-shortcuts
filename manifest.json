{
    "manifest_version": 2,

    "name": "Custom Keyboard Shortcuts",
    "description": "Open specific websites with direct keybinds.",
    "version": "1.0",
    "background": {
        "scripts": ["bind.js"]
    },
    "commands": {
        "google" : {
            "suggested_key": {
                "default": "Ctrl+Space" 
            },
            "description": "Open Google"
        },
        "facebook" : {
            "suggested_key": {
                "default": "Ctrl+1" 
            },
            "description": "Open Facebook"
        },
        "youtube" : {
            "suggested_key": {
                "default": "Ctrl+2" 
            },
            "description": "Open YouTube"
        }
    }
}
